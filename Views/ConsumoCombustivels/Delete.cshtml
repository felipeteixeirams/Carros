@model Carros.Models.ConsumoCombustivel

@{
    ViewData["Title"] = "Delete";
}

<h1>Remover Registro</h1>

<h3>Tem certeza que deseja remover os dados deste veículo?</h3><br>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Capacidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capacidade) Litros
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Portador)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Portador)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CombustivelAtual)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CombustivelAtual) Litros
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="NumeroDeSerie" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a lista</a>
    </form>
</div>
